<div class="header">
  <%= link_to root_path, { method: :get, class: "header_logo" } do %>
    Grace<span class="header_logo-emphasized">Tunes</span>
  <% end %>
  <div class="header_links">
    <div class="header_link">
      <%= link_to new_song_path, { method: :get, class: "#{set_active_if_path(new_song_path)}" } do %>
        <i class="fa fa-music"></i>Upload Song
      <% end %>
    </div>
    <div class="header_link">
      <%= link_to songs_path, { method: :get, class: "#{set_active_if_path(songs_path)}" } do %>
        <i class="fa fa-search"></i>Search
      <% end %>
    </div>
    <% if current_user.signed_in? %>
      <div class="header_link">
        <%= link_to "Sign Out", sign_out_path, method: :get %>
      </div>
    <% end %>
  </div>

  <div class="welcome-message">Welcome, <%= current_user.name %></div>

</div>