<% set_page_title @song.name + " edit history" %>

<div class="container">
  <h1 class="page-header"><%= @song.name + " Edit History" %></h1>

  <% @audits.reverse.each do |audit| %>
    <div class="row">
      <div class="col-md-12">
        <h4>Version: <%= audit.version %></h4>
        <h5><%= audit_action_past_tense(audit.action).capitalize %> by <strong><%= audit.user.name %></strong> (<%= audit.user.email %>)</h5>
        <div>at <%= audit.created_at %></div>
        <div><small><%= audit.remote_address %></small></div>

        <br/>

        <% audit.audited_changes.each do |field, diff| %>
          <% if field == "lyrics" %>
            <% next %>
          <% end %>
          <% split_diff = Diffy::SplitDiff.new(diff[0], diff[1], :format => :html) %>
          <% heading_name = audit.id.to_s + "_" + field + "_heading" %>
          <% field_name = audit.id.to_s + "_" + field %>
          <div class="panel panel-default">

            <div class="panel-heading" role="tab" id="<%= heading_name %>">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" href="#<%= field_name %>" aria-expanded="false" aria-controls="<%= field_name %>">
                  <%= field.split('_').map(&:capitalize).join(' ') %>
                </a>
              </h4>
            </div>

            <div class="panel-collapse collapse" id="<%= field_name %>" role="tabpanel" aria-lablledby="<%= heading_name %>">
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-6">
                    <%= raw split_diff.left %>
                  </div>
                  <div class="col-md-6">
                    <%= raw split_diff.right %>
                  </div>
                </div>
              </div>
            </div>

          </div>
        <% end %>
        <hr/>
      </div>
    </div>
  <% end %>
</div>