<div class="index-page">
  <div class="container">
    <div class="row">
      <div class="center-block">
        <h1>Songs</h1>

        <div class="search">
          <div class="search_input_container">
            <input type="search" id="songs-search-field" class="form-control search_input" placeholder="Search lyrics, song titles, and artists"/>
            <i class="fa fa-search"></i>
          </div>
          <table class="search_filter filter-selection" border="0">
            <tbody>
              <tr>
                <td>Key</td>
                <td><%= select_tag :key, get_key_opts('Any', include_any = true), class: 'form-control' %></td>
                <td></td>
                <td>Tempo</td>
                <td><%= select_tag :tempo, get_tempo_opts('Any', include_any = true), class: 'form-control' %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <table class="tbl songs-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Artist</th>
              <th>Tempo</th>
              <th>Key</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>

  <div class="preview-drawer">
    <div class="close-button">x</div>
    <a target="_blank" class="name"></a>
    <h3 class="artist"></h3>
    <div class="meta-info">
      <span class="key"></span><span class="tempo"></span>
    </div>
    <div class="song-sheet fixed-width"></div>
  </div>
</div>

<%= javascript_include_tag 'songs/index' %>