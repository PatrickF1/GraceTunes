<div class="song row praise-set-song">
  <div class="col-md-12 song_content praise-set-song-content flex-row flex-align-items-center flex-justify-space-between">
    <div class="flex-row flex-align-items-center">
      <%= content_tag :i, class: "fa fa-bars fa-2x drag-handle song_dragIcon l-h-right-spaced", data: { set_position_path: set_song_position_praise_set_path, praise_set_song_id: praise_set_song.id }  do %>
      <% end %>
      <div class="song-info">
        <div class="song_title"><%= link_to song.name, song, class: "link" %></div>
        <span><strong>Key:</strong> <span class="key"><%= select_tag :praise_set_song_key, get_key_opts(praise_set_song.key), class: "form-control input-sm praise-set-song-key", data: { path: set_song_key_praise_set_path, praise_set_song_id: praise_set_song.id } %></span></span>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <span><strong>Tempo:</strong> <%= song.tempo %></span>
      </div>
    </div>
    <%= link_to "", { class: "remove-song song_trashIcon", data: { path: remove_song_praise_set_path, praise_set_song_id: praise_set_song.id } } do %>
      <i class="fa fa-trash-o fa-2x"></i>
    <% end %>
  </div>
</div>