<%= form_for @praise_set, html: {class: 'form'} do |f| %>
  <% if @praise_set.errors.any? %>
    <div class="song-errors alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <div id="error_explanation">
        <strong><%= pluralize(@praise_set.errors.count, "error") %> prohibited this praise set from being saved:</strong>
        <ul>
        <% @praise_set.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-6 required <%= highlight_if_errors(@praise_set, :event_name) %>">
      <%= f.label :event_name %>
      <%= f.text_field :event_name, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6 required <%= highlight_if_errors(@praise_set, :event_date) %>">
      <%= f.label :event_date %>
      <%= f.date_field :event_date, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= f.label :song_ids, 'Songs' %>
      <%= f.select :song_ids, options_from_collection_for_select(Song.all, :id, :name), {}, { multiple: true, class: 'song-select form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control' %>
    </div>
  </div>

  <%= f.hidden_field :owner_email, value: current_user.email %>

  <%= f.submit 'Create Set', class: 'btn btn-warning' %>
<% end %>

<%= javascript_include_tag 'praise_sets/form' %>